<div>
  <% if flash[:alert]%>
    <p class="notice"><%= flash[:alert]%></p>
  <% end %>
  <%= form_tag do %>
    <p class="login">Log in</p>
    <%= label_tag :name, "Name"%>
    <%= text_field_tag :name, params[:name]%>
    <%= label_tag :password, "Password"%>
    <%= password_field_tag :password, params[:password]%>
    <%= submit_tag "Login" %>
  <% end %>
</div>
