<h1>Search Sydney's HoMe of property</h1>
<form class="search-area" action="/properties/list" method="get">
  <div class="form-row">
    <div class="form-group col-md-8">
      <label for="search">Address</label>
      <input class="search-area form-control form-control-lg" type="search" name="search" id="search">
    </div>
    <div class="form-group col-md-4">
      <label for="property_type">Property Type</label>
      <select name="property_type" id="property_type" class="form-control form-control-lg">
        <option selected="" value="all">All</option>
        <% @property_types.each do |property_type| %>
          <option value="<%= property_type.name %>"><%= property_type.name %></option>
        <% end %>
      </select>
    </div>
    <button type="submit" class="btn btn-primary btn-lg col btn btn-dark">Search</button>
  </div>
</form>
