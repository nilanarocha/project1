<p id="notice"><%= notice %></p>
<h1>Users</h1>
<%= link_to 'New User', new_user_path, :class => 'btn btn-dark' %>
<hr/>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col-md-8">Name</th>
      <th scope="col-md-4"> Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td scope="col-md-8"><%= user.name %></td>
        <td scope="col-md-8">
          <%= link_to 'Show', user, :class => 'btn btn-dark' %>
          <%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-dark' %>
          <%= link_to 'Destroy', user, :class => 'btn btn-dark', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
